  "num_layers": 1,
  "hidden_size": 150,
  "wemb_dim": 0,
  "cemb_dim": 300,
  "cemb_type": "rnn",
  "cemb_layers": 2,
  "scorer": "general",

  "optimizer": "Adam",
  "lr": 0.001,
  "lr_factor": 0.75,
  "lr_patience": 2,
  
  "include_lm": true,
  "lm_shared_softmax": true,
  "lm_schedule": {
    "patience": 2,
    "factor": 0.5,
    "weight": 0.2,
    "mode": "min"
  }
