{
  "modelpath": "models",
  "modelname": "mathir-ogl-med-lm", // any model prefix relevant to the experiment
    
  "input_path": "/home/guserbto@GU.GU.SE/pie-data/historical/mathir_ogl_moses_rest/train.tsv",
  "dev_path": "/home/guserbto@GU.GU.SE/pie-data/historical/mathir_ogl_moses_rest/dev.tsv",
  "sep": "\t",

  "report_freq": 200,
  "max_sent_len": 35,

  "tasks": [
    {
      "name": "lemma",
      "target": true,
      "context": "sentence",
      "level": "char",
      "decoder": "attentional",
      "settings": {
        "bos": true,
        "eos": true,
        "lower": true,
        "target": "lemma"
      },
      "layer": -1
    }
